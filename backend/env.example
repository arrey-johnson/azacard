# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=azacard
DB_USER=root
DB_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Payment Gateway Configuration
MOMO_API_KEY=your-momo-api-key
MOMO_API_SECRET=your-momo-api-secret
MOMO_BASE_URL=https://api.momo.com

ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_API_SECRET=your-orange-money-api-secret
ORANGE_MONEY_BASE_URL=https://api.orange-money.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# Admin Configuration
ADMIN_EMAIL=admin@azacard.com
ADMIN_PASSWORD=admin123

# Card Configuration
CARD_ISSUANCE_FEE=500
MIN_LOAD_AMOUNT=1000
MAX_DAILY_WITHDRAWAL=50000
MAX_MONTHLY_WITHDRAWAL=500000 